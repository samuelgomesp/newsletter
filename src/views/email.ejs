<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Lista de E-mails</title>
</head>
<body>
    <section id="section-email">
        <div id="list-emails">
            <h1>Lista de e-mails cadastrados</h1>    
            <ul>
                <% users.forEach(user => { %>
                    <li><%= user.userEmail  %>
                        <span>
                            <form id="form-email" action="/emails/delete" method="POST">
                                <input type="hidden" name="username" value="<%= user.userName %>">
                                <button type="submit" class="btn-delete">Excluir</button>
                            </form>
                        </span>
                    </li>
                    <hr>
                <% }) %>
            </ul>    
        </div>
    </section>
</body>
</html>